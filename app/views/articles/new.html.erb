<h1>New Article</h1>

<%= form_for (@article) do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, class: "form-control" %>
	</div>

	<%= f.submit 'Create Article', class: "btn btn-primary" %>


<% end %>