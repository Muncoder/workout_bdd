<h1>List of Articles</h1>
<hr>

<%= @articles.each do |article| %>
	<div class="row">
		<div class="col-md-4">
			<%= link_to article_path(article) do %>
				<h2><%= article.title %></h2>			
			<% end %>

			<p>
				<%= article.body %>
			</p>
		</div>
	</div>
<% end %>

<hr>

<%= link_to "New Article", new_article_path, class: "btn btn-default"  %>