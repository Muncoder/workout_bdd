<div class="container">
	<h1>List of Articles</h1>
	<hr>

	<div class="row">
		<% @articles.each do |article| %>
			<div class="col-md-4">
				<%= link_to article_path(article) do %>
					<h2><%= article.title %></h2>			
				<% end %>

				<p>
					<%= article.body %>
				</p>
				<hr>
				Created by: <%= article.user.email %>
			</div>
		<% end %>
	</div>

	<hr>

	<%= link_to "New Article", new_article_path, class: "btn btn-default"  %>	
</div>
